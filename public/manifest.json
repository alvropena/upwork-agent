{
    "manifest_version": 3,
    "name": "Upwork Agent",
    "version": "1.0",
    "description": "Helps navigate and submit proposals on Upwork",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.upwork.com/*"
    ],
    "action": {
      "default_icon": {
        "48": "icons/icon48.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.upwork.com/*"],
        "js": ["content.js"]
      }
    ]
  }